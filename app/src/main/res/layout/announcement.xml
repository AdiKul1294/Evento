<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Announcement Title" />

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#999999"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/title_text_view"
        android:layout_alignParentStart="true"
        android:text="By: John Doe" />

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#333333"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@id/author_text_view"
        android:layout_alignParentStart="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam blandit felis vel ex bibendum, eu blandit sapien maximus." />

    <TextView
        android:id="@+id/date_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#999999"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/title_text_view"
        android:text="Jan 01, 2023 09:00 AM" />

</RelativeLayout>